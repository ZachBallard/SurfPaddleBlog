@model SurfPaddleBlog.Models.Blog

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container float: center">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-1">
            <h2>@Model.Title</h2>
            <p><img class="img img-circle" src="@Model.AuthorPictureUrl" height="50" width="50"> &nbsp;@Model.Author</p>
        </div>
        <div class="col-xs-4">
            <img class="img img-circle" src="@Model.AuthorPictureUrl" height="100" width="100">
            <p>@Model.Author</p><p>More stuff yay</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-8 col-xs-offset-1">
            <p>@Model.Body1</p><h3>| @Model.BigMiddleText</h3>
        </div>
        <div class="col-xs-4">
            <img class="adimage" src="@Model.AdPictureUrl" alt="">
        </div>
    </div>

    <div class="row">
        <div class="col-xs-8 col-xs-offset-1">
            <p>@Model.Body2</p>
        </div>
        <div class="col-xs-4">
            <h4>@Model.SideBarTitle</h4>
            <p>@Model.SideBarBody</p>
            @Html.ActionLink("New Post", "Create")
            <br />
            @Html.ActionLink("Edit Post", $"Edit/{Model.Id}")
            <br />
            @Html.ActionLink("Delete Post", $"Delete/{Model.Id}")

        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
